---
import Layout from "../layouts/Layout.astro";
import { experiences } from "../utils/experiences";
---

<Layout>
    <main class="max-w-4xl mt-15 lg:mt-0">
        <div class="relative">
            <div class="absolute top-2 bottom-0 bg-[#393e42]"></div>
            <header class="mb-10 border-b border-white/10 pb-10">
                <div
                    class="flex items-center gap-2 font-mono text-[11px] text-slate-500 mb-4 tracking-widest uppercase"
                >
                    <span class="text-slate-400">root</span>
                    <span class="text-slate-400">/</span>
                    <span class="text-slate-400">var</span>
                    <span class="text-slate-400">/</span>
                    <span class="text-slate-400">log</span>
                    <span class="text-slate-400">/</span>
                    <span class="text-[#FFFF30] font-bold">career_trace</span>
                </div>

                <div
                    class="flex flex-col md:flex-row md:items-end justify-between gap-6"
                >
                    <div>
                        <h1
                            class="text-4xl font-black text-white font-mono tracking-tighter uppercase mb-2"
                        >
                            Experience<span class="text-[#FFFF30] animate-pulse"
                                >_</span
                            >
                        </h1>
                        <p
                            class="text-slate-400 font-mono text-xs max-w-xl leading-relaxed"
                        >
                            <span class="text-[#FFFF30] font-bold">//</span> Chronological
                            track of professional deployments, system optimizations,
                            and full-stack engineering milestones.
                        </p>
                    </div>

                    <div
                        class="grid grid-cols-2 gap-x-8 gap-y-2 border-l border-white/10 pl-6 font-mono text-[10px] uppercase"
                    >
                        <div class="flex flex-col">
                            <span class="text-[#FFFF30]">status</span>
                            <span class="text-white">active_intern</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-[#FFFF30]">entries</span>
                            <span class="text-white"
                                >{experiences.length}_records</span
                            >
                        </div>
                        <div class="flex flex-col">
                            <span class="text-[#FFFF30]">location</span>
                            <span class="text-white">Appleton_WI</span>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-[#FFFF30]">updated</span>
                            <span class="text-white">DEC_2025</span>
                        </div>
                    </div>
                </div>
            </header>

            <div class="space-y-10">
                {
                    experiences.map((exp) => (
                        <div class="relative pl-10 group">
                            <div
                                class={`absolute left-0 top-1.5 w-4 h-4 rounded-full bg-[#111] border-2 transition-all duration-500 
              ${exp.active ? "border-[#FFFF30] shadow-[0_0_15px_rgba(255,255,48,0.4)]" : "border-slate-500 grayscale"}`}
                            />

                            <div class="mb-6">
                                <div class="flex flex-wrap items-center gap-3 mb-2">
                                    <h2 class="text-xl font-bold text-white font-mono">
                                        {exp.role}
                                    </h2>
                                    {exp.active && (
                                        <span class="px-2 py-0.5 bg-green-500/10 text-green-400 text-[9px] font-mono border border-green-400/30 animate-pulse">
                                            ACTIVE_INSTANCE
                                        </span>
                                    )}
                                </div>

                                <div class="flex flex-wrap items-center gap-x-4 gap-y-1 font-mono text-[13px] text-slate-400">
                                    <span class="text-[#FFFF30] font-bold">
                                        @ {exp.company}
                                    </span>
                                    <span class="text-white/10">|</span>
                                    <span>{exp.location}</span>
                                    <span class="text-white/10">|</span>
                                    <span class="text-slate-400/80 italic">
                                        {exp.period}
                                    </span>
                                </div>
                            </div>

                            <div class="space-y-5">
                                {exp.logs.map((log) => (
                                    <div class="flex flex-col sm:flex-row sm:items-baseline gap-3">
                                        <span class="text-[#FFFF30] font-mono text-[11px] font-black min-w-[90px]">
                                            [{log.action}]
                                        </span>
                                        <div>
                                            <p class="text-white font-mono text-sm leading-relaxed">
                                                {log.target}
                                            </p>
                                            <p class="text-slate-400 font-mono text-[11px] mt-1 flex items-center gap-2">
                                                <span class="text-[#FFFF30]/30 text-xs">
                                                    └─
                                                </span>
                                                <span>{log.impact}</span>
                                            </p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
