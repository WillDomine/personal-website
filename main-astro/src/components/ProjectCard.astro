---
import { Github, ExternalLink, Crown, SquareCheck, Hammer } from "@lucide/astro";
const {
    title,
    description,
    github_link,
    website_link,
    image,
    tech,
    featured,
    completed,
} = Astro.props;

const tech_list = tech || [];
---

<div
    class="group flex flex-col w-full lg:w-80 h-80 bg-[#1a1c1e] border border-white/5 rounded-2xl overflow-hidden hover:border-[#FFFF30]/50 transition-all duration-300 hover:shadow-[0_8px_30px_rgb(0,0,0,0.4)]"
>
    <div class="relative h-48 w-full overflow-hidden bg-black/20">
        <img
            class="w-full h-full object-cover opacity-90 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700"
            src={image}
            alt={title}
        />
        <div
            class="absolute inset-0 bg-black/40 flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
            {
                github_link && (
                    <a
                        href={github_link}
                        title="Github Link"
                        class="p-2 bg-[#25282a] rounded-full text-[#FFFFF0] hover:text-[#FFFF30] transition-colors"
                    >
                        <Github size={20} />
                    </a>
                )
            }
            {
                website_link && (
                    <a
                        href={website_link}
                        title="Website Link"
                        class="p-2 bg-[#25282a] rounded-full text-[#FFFFF0] hover:text-[#FFFF30] transition-colors"
                    >
                        <ExternalLink size={20} />
                    </a>
                )
            }
        </div>
    </div>

    <div class="flex flex-col flex-1 p-5">
        <div class="flex justify-between items-start mb-2">
            <h3
                class="font-mono text-[#FFFFF0] text-base font-bold tracking-tight group-hover:text-[#FFFF30] transition-colors"
            >
                {title}
            </h3>
            <div class="flex gap-3">
                {
                    featured && (
                        <a
                            href="javascript:void(0)"
                            class="cursor-default"
                            title="Featured"
                        >
                            <Crown class="text-[#FFFF30]" size={20} />
                        </a>
                    )
                }
                <a href="javascript:void(0)" class="cursor-default" title={completed ? "Completed" : "In-Progress"}>
                {   
                    completed ? <SquareCheck class="text-[#3ced3f]" size={20}/> : <Hammer class="text-[#ee3a3a]" size={20}/>
                }
                </a>
            </div>
        </div>

        <p class="text-[11px] text-gray-500 font-mono mb-4 leading-relaxed">
            {description || "// no_description_provided"}
        </p>

        <div class="mt-auto flex flex-wrap gap-1.5">
            {
                tech_list.map((item: string) => (
                    <span class="text-[9px] font-mono px-2 py-0.5 rounded-md bg-[#393e42] text-[#FFFFF0]/80 border border-white/5 group-hover:border-[#FFFF30]/20 transition-colors">
                        {item}
                    </span>
                ))
            }
        </div>
    </div>
</div>
